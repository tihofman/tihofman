---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { contactLinks } from '../data/projects';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero" id="hero">
  <!-- Background grid accent -->
  <div class="hero-bg-lines" aria-hidden="true"></div>

  <div class="hero-inner container-responsive">

    <!-- Left: main content -->
    <div class="hero-main">

      <div class="hero-name-block">
        <span class="hero-firstname">timm</span>
        <h1 class="hero-lastname">HOFMANN</h1>
      </div>

      <div class="hero-divider" aria-hidden="true">
        <span class="hero-divider-line"></span>
        <span class="hero-divider-dot"></span>
      </div>

      <p class="hero-title">{t('hero.title')}</p>
      <p class="hero-tagline">{t('hero.tagline')}</p>

      <a href="#projects" class="cta-button">
        {t('hero.cta')}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <polyline points="19 12 12 19 5 12"></polyline>
        </svg>
      </a>
    </div>

    <!-- Right: social column -->
    <aside class="hero-social" aria-label="Social links">
      <a href={contactLinks.github} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>GitHub</span>
      </a>
      <a href={contactLinks.linkedin} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
        <span>LinkedIn</span>
      </a>
      <a href={contactLinks.email} class="social-link" aria-label="Email">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        <span>Email</span>
      </a>
    </aside>

  </div>

  <!-- Bottom corner label -->
  <div class="hero-corner-label" aria-hidden="true">
    <span class="hero-corner-dot"></span>
    <span>Full&#8209;Stack · Cloud · 2026</span>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--color-border);
  }

  /* Subtle horizontal scan lines in the upper-left */
  .hero-bg-lines {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background:
      linear-gradient(
        to bottom,
        transparent 0%,
        rgba(232, 168, 56, 0.03) 30%,
        transparent 70%
      );
  }

  .hero-inner {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: var(--spacing-3xl);
    padding-block: 6rem;
    position: relative;
    z-index: 1;
  }

  /* ── Name block ── */
  .hero-name-block {
    display: flex;
    flex-direction: column;
    gap: 0;
    line-height: 1;
    animation: revealUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .hero-firstname {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: clamp(1.5rem, 4vw, 3.5rem);
    letter-spacing: 0.35em;
    text-transform: lowercase;
    color: var(--color-accent);
    display: block;
    margin-bottom: 0.1em;
  }

  .hero-lastname {
    font-family: var(--font-display);
    font-weight: 800;
    font-size: clamp(5.5rem, 16vw, 18rem);
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: var(--color-text);
    line-height: 0.88;
    margin: 0;
  }

  /* ── Divider ── */
  .hero-divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-block: var(--spacing-xl) var(--spacing-lg);
    animation: revealUp 0.9s cubic-bezier(0.16, 1, 0.3, 1) 0.1s both;
  }

  .hero-divider-line {
    display: block;
    height: 1px;
    width: clamp(3rem, 8vw, 7rem);
    background: linear-gradient(90deg, var(--color-accent), transparent);
  }

  .hero-divider-dot {
    display: block;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--color-accent);
    opacity: 0.7;
    flex-shrink: 0;
  }

  /* ── Title & tagline ── */
  .hero-title {
    font-family: var(--font-sans);
    font-size: clamp(1rem, 2.2vw, 1.4rem);
    font-weight: 500;
    color: var(--color-text-muted);
    letter-spacing: 0.04em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md);
    animation: revealUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
  }

  .hero-tagline {
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    color: var(--color-text-faint);
    line-height: 1.7;
    max-width: 520px;
    margin-bottom: var(--spacing-2xl);
    animation: revealUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.3s both;
  }

  /* ── CTA ── */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: 0.8rem 1.75rem;
    background: transparent;
    color: var(--color-accent);
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    text-decoration: none;
    border: 1px solid var(--color-accent);
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
    animation: revealUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
  }

  .cta-button:hover {
    background: var(--color-accent);
    color: var(--color-bg);
    box-shadow: 0 0 24px rgba(232, 168, 56, 0.25);
  }

  .cta-button svg {
    transition: transform var(--transition-base);
  }

  .cta-button:hover svg {
    transform: translateY(3px);
  }

  /* ── Social column ── */
  .hero-social {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    align-self: center;
    animation: revealRight 0.9s cubic-bezier(0.16, 1, 0.3, 1) 0.3s both;
    flex-shrink: 0;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-text-faint);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.06em;
    transition: color var(--transition-base);
    white-space: nowrap;
  }

  .social-link span {
    display: none;
  }

  .social-link svg {
    flex-shrink: 0;
    transition: transform var(--transition-base);
  }

  .social-link:hover {
    color: var(--color-accent);
  }

  .social-link:hover svg {
    transform: scale(1.15);
  }

  /* ── Corner label ── */
  .hero-corner-label {
    position: absolute;
    bottom: var(--spacing-xl);
    right: var(--spacing-2xl);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.12em;
    color: var(--color-text-faint);
    text-transform: uppercase;
    animation: fadeIn 1.2s ease 0.6s both;
  }

  .hero-corner-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-accent);
    opacity: 0.5;
    flex-shrink: 0;
  }

  /* ── Animations ── */
  @keyframes revealUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes revealRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ── Responsive ── */
  @media (min-width: 640px) {
    .social-link span {
      display: inline;
    }

    .hero-social {
      gap: var(--spacing-xl);
    }
  }

  @media (max-width: 768px) {
    .hero-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-2xl);
      padding-block: 5rem 4rem;
    }

    .hero-social {
      flex-direction: row;
      gap: var(--spacing-xl);
      align-self: auto;
    }

    .hero-corner-label {
      display: none;
    }
  }
</style>
