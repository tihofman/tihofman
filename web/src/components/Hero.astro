---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { contactLinks } from '../data/projects';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero" id="hero">
  <div class="hero-content container-responsive">
    <div class="hero-text">
      <h1 class="hero-name">{t('hero.name')}</h1>
      <p class="hero-title">{t('hero.title')}</p>
      <p class="hero-tagline">{t('hero.tagline')}</p>

      <div class="hero-links">
        <a
          href={contactLinks.github}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label="GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
        <a
          href={contactLinks.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label="LinkedIn"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
        <a href={contactLinks.email} class="social-link" aria-label="Email">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
            ></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </a>
      </div>

      <a href="#projects" class="cta-button">
        {t('hero.cta')}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <polyline points="19 12 12 19 5 12"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-neutral-50) 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at 20% 50%,
      rgba(92, 124, 250, 0.1) 0%,
      transparent 50%
    );
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding-block: var(--spacing-3xl);
  }

  .hero-text {
    max-width: 800px;
  }

  .hero-name {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-md);
    background: linear-gradient(135deg, var(--color-primary-700), var(--color-primary-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.6s ease-out;
  }

  .hero-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    color: var(--color-neutral-700);
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-tagline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-neutral-600);
    line-height: 1.7;
    margin-bottom: var(--spacing-2xl);
    animation: fadeInUp 1s ease-out;
  }

  .hero-links {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
    animation: fadeInUp 1.2s ease-out;
  }

  .social-link {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border-radius: var(--radius-md);
    color: var(--color-neutral-700);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--color-primary-600);
    box-shadow: var(--shadow-md);
    transform: translateY(-4px);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-xl);
    background: var(--color-accent);
    color: white;
    font-weight: 600;
    font-size: 1.125rem;
    border-radius: var(--radius-lg);
    text-decoration: none;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    animation: fadeInUp 1.4s ease-out;
  }

  .cta-button:hover {
    background: var(--color-accent-dark);
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .cta-button svg {
    transition: transform var(--transition-base);
  }

  .cta-button:hover svg {
    transform: translateY(4px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
