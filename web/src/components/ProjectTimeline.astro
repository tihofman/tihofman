---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { projects } from '../data/projects';
import ProjectCard from './ProjectCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="projects" id="projects">
  <div class="projects-inner container-responsive">

    <header class="section-header">
      <span class="section-number" aria-hidden="true">02</span>
      <h2 class="section-title">{t('projects.title')}</h2>
    </header>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="grid-item" style={`--index: ${index}`}>
          <ProjectCard project={project} lang={lang} />
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  .projects {
    padding-block: var(--spacing-3xl);
    border-bottom: 1px solid var(--color-border);
  }

  .projects-inner {
    max-width: 1280px;
  }

  /* ── Section header ── */
  .section-header {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-3xl);
  }

  .section-number {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-accent);
    letter-spacing: 0.08em;
    opacity: 0.7;
    flex-shrink: 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: clamp(1.75rem, 5vw, 3rem);
    letter-spacing: -0.01em;
    text-transform: uppercase;
    color: var(--color-text);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
    flex: 1;
  }

  /* ── Grid ── */
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .grid-item {
    animation: fadeInCard 0.5s ease-out backwards;
    animation-delay: calc(var(--index) * 0.06s);
  }

  /* Make the first card span 2 cols (featured) on larger screens */
  @media (min-width: 1024px) {
    .grid-item:first-child {
      grid-column: span 2;
    }
  }

  @keyframes fadeInCard {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ── Responsive header ── */
  @media (max-width: 640px) {
    .section-header {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .section-title {
      border-bottom: none;
      padding-bottom: 0;
    }
  }
</style>
